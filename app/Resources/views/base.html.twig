<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Devis Multi-Société{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/base.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="content">
            <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="{{ path ('dmc_devis_homepage') }}">Devis Multi-Société</a>
                </div>
                <div>
                  <ul class="nav navbar-nav">
                    {% block Navigation %}
                    <li class="active"><a href="{{ path ('dmc_devis_homepage') }}">Home</a></li>
                    {% endblock %}
                  </ul>
                </div>
              </div>
            </nav>
        {% block Header %}
            <h1 id="titre"></h1>
        {% endblock %}
            {% block Application %}
            <div id="application">
                <div>
                    <a>
                        <img src="{{ asset('assets/images/facturation.png') }}" alt="facturation" />
                        <span id="facturation">Facturation</span>
                    </a>
                </div>
                <div>
                    <a href="{{ path ('dmc_devis_homepage') }}">
                        <img src="{{ asset('assets/images/devis.png') }}" alt="devis" />
                        <span id="devis">Devis</span>
                    </a>
                </div>
                <div>
                    <a href="{{ path ('dmc_historique_devis') }}">
                        <img src="{{ asset('assets/images/historique_devis.png') }}" alt="histodevis" />
                        <span id="histodevis">Historique Devis</span>
                    </a>
                </div>
                <div>
                    <a href="{{ path ('dmc_crud_homepage') }}">
                        <img src="{{ asset('assets/images/gestion.png') }}" alt="gestion"/>
                        <span id="gestion">Gestion DMC</span>
                    </a>
                </div>
            </div>
            {% endblock %}
        </div>
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>