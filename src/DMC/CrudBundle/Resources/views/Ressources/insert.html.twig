{% extends 'DMCCrudBundle:navBar:navBarArticle.html.twig' %}

{% block Header %}
	<h1>Ressources</h1>
{% endblock %}

{% block Application %}
	<div id="formulaire">
	    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	    {# Les erreurs générales du formulaire. #}
	    {{ form_errors(form) }}

	    <div class="form-group">
	      {# Génération du label. #}
	      {{ form_label(form.designation, "Désignation : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

	      {# Affichage des erreurs pour ce champ précis. #}
	      {{ form_errors(form.designation) }}

	      <div class="col-sm-4">
	        {# Génération de l'input. #}
	        {{ form_widget(form.designation, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>

	    {# Idem pour un autre champ. #}
	    <div class="form-group">
	      {{ form_label(form.famille, "Famille : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	      {{ form_errors(form.famille) }}
	      <div class="col-sm-4">
	        {{ form_widget(form.famille, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.unite, "Unité : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	      {{ form_errors(form.unite) }}
	      <div class="col-sm-4">
	        {{ form_widget(form.unite, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.prix, "Prix : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	      {{ form_errors(form.prix) }}
	      <div class="col-sm-4">
	        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.estcompose, "Article composé : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	      {{ form_errors(form.estcompose) }}
	      <div class="col-sm-4">
	        {{ form_widget(form.estcompose, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>
					{#{{ dump(form.idArticle.vars) }}#}
	    {# FORM LIGNES #}
		<div id="formlignes">
			<span>Contenu Article</span>
			<div id="backtable">
				<table class="table">
					<thead>
						<tr>
							<!--<th>N° Article</th>-->
							<th>Libellé</th>
							<th>Famille</th>
							<th>Unité</th>
							<th>Quantité</th>
							<th>Prix</th>
							<th>Composé</th>
							<!--<th>En-tête</th>-->
						</tr>
					</thead>
					<tbody>
						{% for compose in form.idArticle %}
							<input type="hidden" id="client" />
							<tr class="ligne">
									<td>{{ form_widget(compose.designation, {'attr': {'class': 'form-control'}}) }}</td>
									<td style="width:8%;">{{ form_widget(compose.famille, {'attr': {'class': 'form-control'}}) }}</td>
									<td style="width:5%;">{{ form_widget(compose.unite, {'attr': {'class': 'form-control'}}) }}</td>
									<td style="width:5%;">{{ form_widget(compose.quantite, {'attr': {'class': 'form-control'}}) }}</td>
								    <td style="width:6%;">{{ form_widget(compose.prix, {'attr': {'class': 'form-control'}}) }}</td>
								    <td style="width:5%;">{{ form_widget(compose.estcompose, {'attr': {'class': 'form-control'}}) }}</td>
								    {#<!--<td style="width:8%;">{{ form_widget(ligne.idEntete, {'attr': {'class': 'form-control'}}) }}</td>-->#}
							</tr>
							<tr>
							<td colspan=13>
								<label>Ajouter une ligne</label>
								{# href => {{ path('LignesDevisType_add') }} #}
								<a href="#" id="ajout_ligne" class="btn"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
							</td>
							</tr>
				 		{% endfor %}
				 	</tbody>
				</table>
			</div>
		</div>

	  {# Génération du label + error + widget pour un champ #}
	  {#{{ form_row(form.codepostal) }} #}

	  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
	 	<button type="submit" name="submitAction"  value="save"  class="btn btn-primary">Save</button> 
 		<button type="submit" name="submitAction"  value="saveandadd" class="btn btn-primary">Save and add</button>

	  {# Génération automatique des champs pas encore écrits.
	     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
	     et tous les champs cachés (type « hidden »). #}
	  {{ form_rest(form) }}
	  
	  {# Fermeture de la balise <form> du formulaire HTML #}
	  {{ form_end(form) }}
    </div>
{% endblock %}