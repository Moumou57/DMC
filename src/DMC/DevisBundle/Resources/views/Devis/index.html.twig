{% extends 'base.html.twig' %}


{% block Header %}
	<h1>Devis</h1>
{% endblock %}

{% block Application %}
	<div><span>Société :</span></div>

	<div id="formulaire">
	    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	    {# Les erreurs générales du formulaire. #}
	    {{ form_errors(form) }}

	    <div class="form-group">
	      {# Génération du label. #}
	      {{ form_label(form.id_societe, "Société : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

	      {# Affichage des erreurs pour ce champ précis. #}
	      {{ form_errors(form.id_societe) }}

	      <div class="col-sm-4">
	        {# Génération de l'input. #}
	        {{ form_widget(form.id_societe, {'attr': {'class': 'form-control'}}) }}

	        {#{{ dump(form.id_societe.vars['choices']) }}#}
	      </div>

	    </div>

	    {# Idem pour un autre champ. #}
	    <div class="form-group">
	      {{ form_label(form.num_devis, "N° Devis : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	      {{ form_errors(form.num_devis) }}
	      <div class="col-sm-4">
	        {{ form_widget(form.num_devis, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.version, "Version : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	      {{ form_errors(form.version) }}
	      <div class="col-sm-4">
	        {{ form_widget(form.version, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>

	    <div class="form-group">
	      {{ form_label(form.id_client, "Client : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
	      {{ form_errors(form.id_client) }}
	      <div class="col-sm-4">
	        {{ form_widget(form.id_client, {'attr': {'class': 'form-control'}}) }}
	      </div>
	    </div>

	  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
	  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

	  {# Génération automatique des champs pas encore écrits.
	     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
	     et tous les champs cachés (type « hidden »). #}
	  {{ form_rest(form) }}
	  
	  {# Fermeture de la balise <form> du formulaire HTML #}
	  {{ form_end(form) }}
    </div>
{% endblock %}